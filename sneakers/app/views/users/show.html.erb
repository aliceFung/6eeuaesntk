<h1><%= @user.username %>'s shoe closet</h1>

<table>
  <tr>
    <th>Brand</th>
    <th>Model</th>
    <th>Year</th>
    <th>When I Bought It</th>
  </tr>
  <% @user.shoes.each do |shoe| %>
  <tr>
    <td><%= shoe.brand%></td>
    <td><%= shoe.model%></td>
    <td><%= shoe.year%></td>
    <td><%= shoe.purchase_date%></td>
  </tr>
  <% end %>
</table>

<br>
<%= link_to "Add a pair of shoes!", new_user_shoe_path(@user) %>
